<div style="display: flex; flex-direction: column; align-items: left; margin: 20px;">

<h1>View/Edit Entry</h1>
<%= form_with(model: @item) do |form| %>
 <div>
    <div class="input-group">
      <span class="input-group-text">Title:</span>
      <%= form.text_field :name, :size => 80, :required => true %>
    </div>
    <br>
    <p style="text-decoration: underline;">Tag:</p>
    <div class="input-group">
      <div class="field">
        <%= form.label :tag, "Reflection", value: "Reflection" %>
        <%= form.radio_button :tag, "Reflection", class: "form-check-input" %>
        
        <%= form.label :tag, "Creative writing", value: "Creative writing" %>
        <%= form.radio_button :tag, "Creative writing", class: "form-check-input" %>
        
        <%= form.label :tag, "Plans", value: "Plans" %>
        <%= form.radio_button :tag, "Plans", class: "form-check-input" %>
        
        <%= form.label :tag, "Personal development", value: "Personal development" %>
        <%= form.radio_button :tag, "Personal development", class: "form-check-input" %>

        <%= form.label :tag, "General ideas", value: "General ideas" %>
        <%= form.radio_button :tag, "General ideas", class: "form-check-input" %>
        
        <%= form.label :tag, "Mood", value: "Mood" %>
        <%= form.radio_button :tag, "Mood", class: "form-check-input" %>
      </div>
    </div>

    <br>
    <div class="input-group">
      <%= form.text_area :content, cols: 75, rows: 30, id: "journalEntry", :required => true %>
    </div>
 </div>
 <br>
  <span>
    <a href=<%= root_path %> class="btn btn-primary">Back home</a>
    <%= form.submit "Submit changes", class: "btn btn-success" %>
    <% end %>
  <button type="button" class="btn btn-secondary" id="ai-chat-button">Open AI Chat</button>
  </span>
</div>

<div class="modal" id="ai-chat-modal">
  <div class="modal-content">
    <span id="close-modal" style="float: right; cursor: pointer;">&times;</span>
    <h4>AI Chat</h4>
    <div id="chat-messages">
      <!-- Chat messages will appear here -->
    </div>
    <textarea id="chat-input" placeholder="Your message here"></textarea>
    <button id="send-btn">Send</button>
  </div>
</div>

<%= javascript_include_tag 'ai_chat' %>